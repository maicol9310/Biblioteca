@using Biblioteca.Application.Models;
@model IEnumerable<BookDto>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        @if (Model.Count() == 0)
        {
            <div class="col">
                <h2 class="text-success">Libros no disponibles</h2>
            </div>
        }
        else
        {
            <div class="col">
                <h2 class="text-success">Libros disponibles</h2>
            </div>
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(x => x.IBSN)</th>
                        <th>@Html.DisplayNameFor(x => x.editoriales_id)</th>
                        <th>@Html.DisplayNameFor(x => x.titulos)</th>
                        <th>@Html.DisplayNameFor(x => x.sinopsis)</th>
                        <th>@Html.DisplayNameFor(x => x.n_paginas)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var book in Model)
                    {
                        <tr>
                            <td>@book.IBSN</td>
                            <td>@book.editoriales_id</td>
                            <td>@book.titulos</td>
                            <td>@book.sinopsis</td>
                            <td>@book.n_paginas</td>
                            <td>
                                <a class="btn btn-outline-success" asp-action="Details" asp-controller="Books"
                                   asp-route-id="@book.IBSN">Details</a>
                                <a class="btn btn-outline-success" asp-action="Update" asp-controller="Books"
                                   asp-route-id="@book.IBSN">Update</a>
                                <a class="btn btn-outline-danger" asp-action="Delete" asp-controller="Books"
                                   asp-route-id="@book.IBSN">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
    <div class="row">
        <a class="btn btn-dark" asp-action="Add" asp-controller="Books">Agregar libro</a>
    </div>
</div>

